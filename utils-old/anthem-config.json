{
  "version": "0.1.0-dev.1",

  "dependencies": {

    "llvm": {
      "github": false,
      "default_version": "4.0.1",
      "git_format": "http://llvm.org/git/{project}",
      "asset": {
        "format": "{protocol}://releases.llvm.org/{version}/{id}-{version}.src.tar.xz"
      },
      "projects": {
        "llvm": {
          "id": "llvm",
          "git": "llvm"
        },
        "clang": {
          "id": "cfe",
          "git": "clang"
        },
        "libc++": {
          "id": "libcxx",
          "git": "libcxx"
        }
      }
    },

    "gcc": {
      "github": false,
      "default_version": "6.4.0",
      "asset": {
        "default_mirror": "nl.mirror.babylon.network/gcc",
        "format": "{protocol}://{mirror}/releases/gcc-{version}/gcc-{version}.tar.{extension}"
      }
    },

    "cmake": {
      "github": false,
      "default_version": {
        "major": 3,
        "minor": 9,
        "patch": 0,
        "minor_patch": 0,
        "_comment": "Set the minor patch to 0 or a string which does not parse to an integer to disable it. Deleting it also works."
      },
      "asset": {
        "format": "{protocol}://cmake.org/files/v{major_minor}/cmake-{version}-{platform}.{extension}"
      }
    },

    "ninja": {
      "github": true,
      "owner": "ninja-build",
      "id": "ninja",
      "default_version": "1.7.2",
      "version_prefix": "v",
      "asset": {
        "multiplatform": true,
        "source": false,
        "fallback": false,
        "id": "ninja.zip",
        "Darwin": "ninja-mac.zip",
        "Linux": "ninja-linux.zip",
        "Windows": "ninja-win.zip"
      }
    },

    "catch": {
      "github": true,
      "owner": "philsquared",
      "id": "Catch",
      "default_version": "1.9.5",
      "version_prefix": "v",
      "asset": {
        "multiplatform": false,
        "source": false,
        "id": "catch.hpp"
      }
    },

    "sdl": {
      "github": false,
      "default_version": "2.0.5",
      "asset": {
        "format": "{protocol}://www.libsdl.org/release/SDL2-{version}.{extension}",
        "windows_format": "{protocol}://www.libsdl.org/release/SDL2-devel-{version}-{type}.{extension}"
      }
    },

    "glfw": {
      "github": true,
      "owner": "glfw",
      "id": "glfw",
      "default_version": "3.2.1",
      "version_prefix": "",
      "asset": {
        "multiplatform": true,
        "source": false,
        "fallback": true,
        "id": "glfw-3.2.1.zip",
        "Windows": "glfw-3.2.1.bin.WIN32.zip"
      }
    },

    "spdlog": {
      "github": true,
      "owner": "gabime",
      "id": "spdlog",
      "default_version": "0.13.0",
      "version_prefix": "Version ",
      "asset": {
        "multiplatform": false,
        "source": true
      }
    },

    "cat": {
      "github": true,
      "owner": "awgn",
      "id": "cat",
      "default_version": "1.3",
      "version_prefix": "v",
      "asset": {
        "multiplatform": false,
        "source": true
      }
    }
  }
}
