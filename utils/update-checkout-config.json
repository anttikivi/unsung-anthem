{
  "api_url": "{}://api.github.com",
  "dependencies": {

    "llvm": {
      "travis": false,
      "github": false,
      "version": "4.0.1",
      "asset": {
        "format": "{}://releases.llvm.org/{}/{}-{}.src.tar.xz"
      },
      "projects": {
        "llvm": {
          "id": "llvm"
        },
        "clang": {
          "id": "cfe"
        },
        "libc++": {
          "id": "libcxx"
        },
        "libc++abi": {
          "id": "libcxxabi"
        }
      }
    },

    "cmake": {
      "travis": true,
      "github": false,
      "version": {
        "major": 3,
        "minor": 8,
        "patch": 2
      },
      "asset": {
        "format": "{}://cmake.org/files/v{}/cmake-{}-{}{}"
      }
    },

    "ninja": {
      "travis": true,
      "github": true,
      "owner": "ninja-build",
      "id": "ninja",
      "version": "v1.7.2",
      "asset": {
        "multiplatform": true,
        "source": false,
        "fallback": false,
        "id": "ninja.zip",
        "Darwin": "ninja-mac.zip",
        "Linux": "ninja-linux.zip",
        "Windows": "ninja-win.zip"
      }
    },

    "catch": {
      "travis": true,
      "github": true,
      "owner": "philsquared",
      "id": "Catch",
      "version": "v1.9.5",
      "asset": {
        "multiplatform": false,
        "source": false,
        "id": "catch.hpp"
      }
    },

    "glfw": {
      "travis": true,
      "github": true,
      "owner": "glfw",
      "id": "glfw",
      "version": "3.2.1",
      "asset": {
        "multiplatform": true,
        "source": false,
        "fallback": true,
        "id": "glfw-3.2.1.zip",
        "Windows": "glfw-3.2.1.bin.WIN32.zip"
      }
    },

    "spdlog": {
      "travis": true,
      "github": true,
      "owner": "gabime",
      "id": "spdlog",
      "version": "Version 0.13.0",
      "asset": {
        "multiplatform": false,
        "source": true
      }
    },

    "cat": {
      "travis": true,
      "github": true,
      "owner": "awgn",
      "id": "cat",
      "version": "v1.3",
      "asset": {
        "multiplatform": false,
        "source": true
      }
    }
  }
