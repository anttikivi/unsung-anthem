{
  "api_url": "https://api.github.com",
  "dependencies": {

    "llvm": {
      "travis": false,
      "github": false,
      "version": "4.0.1",
      "asset": {
        "format": "http://releases.llvm.org/%s/%s-%s.src.tar.xz"
      },
      "projects": {
        "llvm": {
          "id": "llvm"
        },
        "clang": {
          "id": "cfe"
        },
        "libc++": {
          "id": "libcxx"
        },
        "libc++abi": {
          "id": "libcxxabi"
        }
      }
    },

    "cmake": {
      "travis": true,
      "github": false,
      "version": {
        "major": 3,
        "minor": 8,
        "patch": 2
      },
      "asset": {
        "format": "https://cmake.org/files/v%s/cmake-%s-%s%s"
      }
    },

    "bazel": {
      "travis": false,
      "github": true,
      "owner": "bazelbuild",
      "id": "bazel",
      "version": "0.5.2",
      "asset": {
        "multiplatform": true,
        "source": false,
        "fallback": false,
        "id": "bazel-0.5.2-installer.sh",
        "Darwin": "bazel-0.5.2-installer-darwin-x86_64.sh",
        "Linux": "bazel-0.5.2-installer-linux-x86_64.sh",
        "Windows": "TODO"
      }
    },

    "ninja": {
      "travis": true,
      "github": true,
      "owner": "ninja-build",
      "id": "ninja",
      "version": "v1.7.2",
      "asset": {
        "multiplatform": true,
        "source": false,
        "fallback": false,
        "id": "ninja.zip",
        "Darwin": "ninja-mac.zip",
        "Linux": "ninja-linux.zip",
        "Windows": "ninja-win.zip"
      }
    },

    "catch": {
      "travis": true,
      "github": true,
      "owner": "philsquared",
      "id": "Catch",
      "version": "v1.9.5",
      "asset": {
        "multiplatform": false,
        "source": false,
        "id": "catch.hpp"
      }
    },

    "glfw": {
      "travis": true,
      "github": true,
      "owner": "glfw",
      "id": "glfw",
      "version": "3.2.1",
      "asset": {
        "multiplatform": true,
        "source": false,
        "fallback": true,
        "id": "glfw-3.2.1.zip",
        "Windows": "TODO"
      }
    },

    "spdlog": {
      "travis": true,
      "github": true,
      "owner": "gabime",
      "id": "spdlog",
      "version": "Version 0.13.0",
      "asset": {
        "multiplatform": false,
        "source": true
      }
    }
  }
}
