{
  "api_url": "{}://api.github.com",
  "dependencies": {

    "llvm": {
      "github": false,
      "default_version": "4.0.1",
      "version_prefix": "",
      "asset": {
        "format": "{}://releases.llvm.org/{}/{}-{}.src.tar.xz"
      },
      "projects": {
        "llvm": {
          "id": "llvm"
        },
        "clang": {
          "id": "cfe"
        },
        "libc++": {
          "id": "libcxx"
        }
      }
    },

    "gcc": {
      "github": false,
      "default_version": "6.4.0",
      "version_prefix": "",
      "asset": {
        "_comment": "mirror, version, version, gz or xz",
        "default_mirror": "nl.mirror.babylon.network/gcc",
        "format": "http://{}/releases/gcc-{}/gcc-{}.tar.{}"
      },
      "dependencies": {
        "gmp": {
          "default_version": "6.1.2",
          "version_prefix": "",
          "asset": {
            "format": "https://gmplib.org/download/gmp/gmp-{}.tar.xz"
          }
        },
        "mpfr": {
          "default_version": "3.1.5",
          "version_prefix": "",
          "asset": {
            "_comment": "version, version",
            "format": "http://www.mpfr.org/mpfr-{}/mpfr-{}.tar.xz"
          }
        },
        "mpc": {
          "default_version": "1.0.3",
          "version_prefix": "",
          "asset": {
            "format": "ftp://ftp.gnu.org/gnu/mpc/mpc-{}.tar.gz"
          }
        },
        "isl": {
          "default_version": "0.16.1",
          "asset": {
            "format": "ftp://gcc.gnu.org/pub/gcc/infrastructure//isl-{}.tar.bz2"
          }
        }
      }
    },

    "cmake": {
      "github": false,
      "default_version": {
        "major": 3,
        "minor": 8,
        "patch": 2
      },
      "version_prefix": "",
      "asset": {
        "format": "{}://cmake.org/files/v{}/cmake-{}-{}{}"
      }
    },

    "ninja": {
      "github": true,
      "owner": "ninja-build",
      "id": "ninja",
      "default_version": "1.7.2",
      "version_prefix": "v",
      "asset": {
        "multiplatform": true,
        "source": false,
        "fallback": false,
        "id": "ninja.zip",
        "Darwin": "ninja-mac.zip",
        "Linux": "ninja-linux.zip",
        "Windows": "ninja-win.zip"
      }
    },

    "catch": {
      "github": true,
      "owner": "philsquared",
      "id": "Catch",
      "default_version": "1.9.5",
      "version_prefix": "v",
      "asset": {
        "multiplatform": false,
        "source": false,
        "id": "catch.hpp"
      }
    },

    "glfw": {
      "github": true,
      "owner": "glfw",
      "id": "glfw",
      "default_version": "3.2.1",
      "version_prefix": "",
      "asset": {
        "multiplatform": true,
        "source": false,
        "fallback": true,
        "id": "glfw-3.2.1.zip",
        "Windows": "glfw-3.2.1.bin.WIN32.zip"
      }
    },

    "spdlog": {
      "github": true,
      "owner": "gabime",
      "id": "spdlog",
      "default_version": "0.13.0",
      "version_prefix": "Version ",
      "asset": {
        "multiplatform": false,
        "source": true
      }
    },

    "cat": {
      "github": true,
      "owner": "awgn",
      "id": "cat",
      "default_version": "1.3",
      "version_prefix": "v",
      "asset": {
        "multiplatform": false,
        "source": true
      }
    }
  }
}
